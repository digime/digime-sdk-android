<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:gravity="center"
    android:orientation="vertical">

    <ProgressBar
        android:id="@+id/pbHome"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:indeterminate="true"
        android:indeterminateTint="@color/secondaryYellow"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="32dp"
        app:srcCompat="@drawable/ic_hive" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:text="@string/homeAppTitle"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/roboto_light"
        android:gravity="center"
        android:text="@string/homeAppSubtitle"
        android:textColor="?android:attr/textColorSecondary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/triggerPullContract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4D843"
        android:fontFamily="@font/roboto_regular"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/homeLabelRead"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_read" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/triggerPushContract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4D843"
        android:fontFamily="@font/roboto_regular"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/homeLabelPush"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_push" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/triggerReadRawContract"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4D843"
        android:fontFamily="@font/roboto_regular"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/homeLabelReadRaw"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_read_raw" />

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="?android:attr/listDivider" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#F4D843"
        android:fontFamily="@font/roboto_regular"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/homeLabelConfiguration"
        android:textAllCaps="false"
        app:cornerRadius="15dp"
        app:icon="@drawable/ic_settings" />

</LinearLayout>